<Page
    x:Class="NewHorizonApp.Views.WebView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewHorizonApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <EdgeUIThemeTransition Edge="Right" />
            <!--<PaneThemeTransition />-->
        </TransitionCollection>
    </Page.Transitions>

    <Grid Padding="0,36,0,0"          
          Background="LightGray">
        <Grid.Resources>
            <Style x:Key="DefaultCommandBarButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="White" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--<CommandBar x:Name="TopCommandBar"  
                    FontSize="36"
                    Background="DarkGray"
                    Foreground="White"
                    Opening="TopCommandBar_Opening"
                    Closing="TopCommandBar_Closing">
            <AppBarButton Name="HomeButton"
                          Style="{StaticResource DefaultCommandBarButtonStyle}"
                          Icon="Home" 
                          Label="Home" 
                          Click="HomeButton_Click" />
            <AppBarButton Name="BackButton"
                          Style="{StaticResource DefaultCommandBarButtonStyle}" 
                          Icon="Back" 
                          Label="Back" 
                          Click="BackButton_Click" />
            <AppBarButton Name="ForwardButton" 
                          Style="{StaticResource DefaultCommandBarButtonStyle}" 
                          Icon="Forward" 
                          Label="Forward" 
                          Click="ForwardButton_Click" />
            <AppBarButton Name="StopButton" 
                          Style="{StaticResource DefaultCommandBarButtonStyle}"
                          Icon="Stop" 
                          Label="Stop" 
                          Click="StopButton_Click" />
            <AppBarButton Name="RefreshButton" 
                          Style="{StaticResource DefaultCommandBarButtonStyle}"
                          Icon="Refresh" 
                          Label="Refresh" 
                          Click="RefreshButton_Click" />
            --><!--<commandbar.content>
                <textblock x:name="urltextblock"
                           fontsize="36"
                           text="{x:bind viewmodel.uriname, mode=oneway}"/>
            </commandbar.content>--><!--
        </CommandBar>-->
        <WebView x:ConnectionId='1' x:Name="MainWebView"
                 Grid.Row="0"
                 Margin="4"
             DefaultBackgroundColor="White"
                                                                                  >
        </WebView>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Center">
            <Button x:ConnectionId='2' x:Name="HomeButton" 
                    Style="{StaticResource StandardStylizedButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                        >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Return to Home Page"/>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='3' x:Name="BackButton" 
                    Style="{StaticResource StandardStylizedButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                        >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Go Back"/>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='4' x:Name="ForwardButton" 
                    Style="{StaticResource StandardStylizedButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                           >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Go Forward"/>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='5' x:Name="StopButton" 
                    Style="{StaticResource StandardStylizedButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                        >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Stop"/>
                </Button.Content>
            </Button>
            <Button x:ConnectionId='6' x:Name="RefreshButton" 
                    Style="{StaticResource StandardStylizedButtonStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                           >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Refresh"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
    
</Page>

