<Page
    x:Class="NewHorizonApp.Views.Food"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewHorizonApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <!--<EntranceThemeTransition />-->
            <!--<EdgeUIThemeTransition Edge="Left" />-->
            <PaneThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="DarkGray"
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource HeaderTextBlockStyle}"
                   Text="Please select your location:"
                   FontSize="72"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <Button x:ConnectionId='1' x:Name="AppletonButton"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource StateButtonStyle}"
                                          >
            <Button.Content>
                <Image Source="/Assets/StateImages/Appleton.png" 
                        Width="400"
                        Height="400"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
            </Button.Content>
        </Button>

        <Button x:ConnectionId='2' x:Name="City2Button"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource StateButtonStyle}"
                                          >
            <Button.Content>
                <Image Source="/Assets/StateImages/Brookfield.png" 
                           Width="400"
                           Height="400"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Button.Content>
        </Button>

        <Button x:ConnectionId='3' x:Name="City3Button" 
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource StateButtonStyle}"
                                          >
            <Button.Content>
                <Image Source="/Assets/StateImages/Madison.png" 
                           Width="400"
                           Height="400"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Button.Content>
        </Button>

        <Button x:ConnectionId='4' Style="{StaticResource StandardStylizedButtonStyle}"
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                 >
            <Button.Content>
                <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Return to Home Page"/>
            </Button.Content>
        </Button>
    </Grid>
</Page>

