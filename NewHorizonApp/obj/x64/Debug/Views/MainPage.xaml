<Page
    x:Class="NewHorizonApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewHorizonApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    RequestedTheme="Light">
    <Page.Resources>
        <Storyboard x:ConnectionId='1' x:Name="TalkingAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)" Storyboard.TargetName="MouthImage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-0.001"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-0.001"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)" Storyboard.TargetName="MouthImage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="4.667"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-0.002"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:ConnectionId='2' x:Name="BlinkingAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="EyelidImage">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>
    <Page.Transitions>
        <TransitionCollection>
            <!--<EntranceThemeTransition />-->
            <!--<EdgeUIThemeTransition Edge="Left" />
            <PaneThemeTransition />-->
        </TransitionCollection>        
    </Page.Transitions>

    <Grid x:ConnectionId='3' x:Name="MainGrid" 
          Padding="0,36,0,0"
          MinWidth="800"
          Background="#2B3552">        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="24" />
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='4' x:Name="TitleTextBlock" 
                   Text="Welcome To...Your Future"
                   Style="{StaticResource HeaderTextBlockStyle}"
                   Foreground="White"
                   HorizontalAlignment="Center"                   
                   Grid.ColumnSpan="2"/>
        <Image x:ConnectionId='5' x:Name="Logo"
               HorizontalAlignment="Right"
               Height="111"
               Width="215"
               Margin="0,0,0,8"
               Grid.Row="0"
               Grid.Column="1"
               Source="/Assets/nhlogo.jpg"/>
        <Image x:ConnectionId='6' x:Name="PatPortraitImage"
                   HorizontalAlignment="Center"
                   Width="330"
                   Height="450"
                   Margin="8"
                   Source="/Assets/Pixel Portrait Riley Small.png"
                   Grid.Row="1"
                   Grid.Column="0"
                   Canvas.ZIndex="0">
        </Image>
        <Image x:ConnectionId='7' x:Name="MouthImage"
                   HorizontalAlignment="Center"
                   Width="330"
                   Height="450"
                   Margin="8"
                   Source="/Assets/Mouth.png" 
                   Grid.Row="1"
                   Grid.Column="0"
                   Canvas.ZIndex="1" 
               RenderTransformOrigin="0.5,0.5">            
            <Image.RenderTransform>
                <CompositeTransform/>
            </Image.RenderTransform>
        </Image>
        <Image x:ConnectionId='8' x:Name="EyelidImage"
               HorizontalAlignment="Center"
                Width="330"
                Height="450"
                Margin="8"
                Source="/Assets/Blinking.png" 
                Grid.Row="1"
                Grid.Column="0"
                Canvas.ZIndex="2"
               Opacity="0" />
        <TextBlock x:ConnectionId='9' x:Name="ButtonDescriptionTextBlock"
                       Margin="8"
                       Padding="8"
                       Foreground="White"
                       Width="500"
                   Style="{StaticResource TitleTextBlockStyle}"
                       Grid.Row="2"
                       Grid.Column="0" />
        
        <ScrollViewer x:ConnectionId='10'                                       
                      Grid.Column="1"
               Grid.Row="1"
               Grid.RowSpan="2" 
                      HorizontalContentAlignment="Center" 
                      VerticalContentAlignment="Top">
            <GridView x:ConnectionId='11' x:Name="MainGridView"
                  Padding="16"
                  Background="#5F6987">
                <GridView.Resources>
                    <Style x:Key="BaseButtonStyle" TargetType="Button">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="Width" Value="240" />
                        <Setter Property="Height" Value="120" />
                        <Setter Property="BorderThickness" Value="4" />
                        <Setter Property="Margin" Value="20" />
                        <Setter Property="Padding" Value="4" />
                    </Style>
                    <Style x:Key="DefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background" Value="#2B3552" />
                        <Setter Property="Foreground" Value="#F2F2F2" />
                        <Setter Property="BorderBrush" Value="#424D6D" />
                        <!--<Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid x:Name="RootGrid"
                                      Background="{TemplateBinding Background}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonGroups">
                                            <VisualState x:Name="Normal">
                                                <Storyboard>
                                                    <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                                </Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="PointerOver" >
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                                   Storyboard.TargetProperty="Background">
                                                        <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Bind DataHolder.Color}" />
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </VisualState>
                                                         
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>-->
                    </Style>
                    <Style x:Key="ImportantButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                        <Setter Property="Background" Value="#795838" />
                        <Setter Property="Foreground" Value="#F2F2F2" />
                        <Setter Property="BorderBrush" Value="#A27C5A" />
                        <!--<Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Grid x:Name="RootGrid"
                                      Background="{TemplateBinding Background}">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonGroups">
                                            <VisualState x:Name="Normal">
                                                <Storyboard>
                                                    <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                                </Storyboard>
                                            </VisualState>
                                            <VisualState x:Name="PointerOver" >
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid"
                                                                                   Storyboard.TargetProperty="Background">
                                                        <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Bind DataHolder.Color}" />
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </VisualState>
                                                         
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>-->
                    </Style>
                    <Style TargetType="Button" x:Key="StylizedButtonStyle">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="Width" Value="240" />
                        <Setter Property="Height" Value="120" />
                        <Setter Property="BorderThickness" Value="4" />
                        <Setter Property="Margin" Value="20" />
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="Background" Value="#2B3552" />
                        <Setter Property="Foreground" Value="#F2F2F2" />
                        <Setter Property="BorderBrush" Value="#424D6D" />
                        <Setter Property="UseSystemFocusVisuals" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid x:Name="RootGrid">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <Storyboard>
                                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Grid.Row)" Storyboard.TargetName="grid">
                                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                                <DiscreteObjectKeyFrame.Value>
                                                                    <x:Int32>1</x:Int32>
                                                                </DiscreteObjectKeyFrame.Value>
                                                            </DiscreteObjectKeyFrame>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="grid"
                                                                                       Storyboard.TargetProperty="Background">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Orange" />
                                                        </ObjectAnimationUsingKeyFrames>

                                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="7*"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid x:Name="ShadowGrid" 
                                                  Margin="0" 
                                                  Grid.RowSpan="2" 
                                                  Grid.Row="1">
                                                <Border BorderBrush="{TemplateBinding Background}"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Background="{TemplateBinding Background}"/>
                                                
                                                <Border BorderBrush="{TemplateBinding Background}"
                                                        BorderThickness="1"
                                                        CornerRadius="6"
                                                        Background="{TemplateBinding Background}"/>                                                
                                                
                                                <Border Background="Black" 
                                                        Opacity="0.25" 
                                                        BorderBrush="Black" 
                                                        CornerRadius="6" />
                                            </Grid>
                                            <Grid x:Name="grid" Margin="0" Grid.Row="0" Grid.RowSpan="2">
                                                    <Border     BorderBrush="{TemplateBinding Background}"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Background="{TemplateBinding Background}"/>
                                                <ContentPresenter>
                                                    <controls:DropShadowPanel BlurRadius="4.0"
                                                                              OffsetX="0"
                                                                              OffsetY="0"
                                                                              ShadowOpacity="0.70"
                                                                              Color="White"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center">
                                                        <TextBlock  FontFamily="{TemplateBinding FontFamily}"
                                                                    SelectionHighlightColor="{TemplateBinding Foreground}"
                                                                    FontSize="{TemplateBinding FontSize}"
                                                                    Foreground="{TemplateBinding Foreground}"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    TextWrapping="Wrap"
                                                                    Height="Auto"
                                                                    Width="Auto"
                                                                    Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                                    </controls:DropShadowPanel>
                                                </ContentPresenter>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GridView.Resources>
                <GridView.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </GridView.Transitions>
                <Button x:ConnectionId='12' x:Name="YourClassButton"
                                                 
                                               
                                      
                    Style="{StaticResource ImportantButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Start Your Class" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='13' x:Name="DigitalReadingButton"
                                                 
                                               
                                      
                    Style="{StaticResource ImportantButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Click here to access your digital courseware" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='14' x:Name="LabsButton"
                                                             
                                                           
                                                  
                                Style="{StaticResource ImportantButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Open your Virtual Lab Here" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='15' x:Name="BrowseClassesButton"
                    Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="You would be AMAZED how many classes we have..." 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='16' x:Name="LaunchGameButton"
                        Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Are you bored?  Click HERE!" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='17' x:Name="SaveMoneyButton"
                    Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Want to save $ on your next class?" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='18' x:Name="HungryButton"
                        Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Are you hungry?" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='19' x:Name="ShoppingButton"
                    Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Would you like to go shopping?" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='20' x:Name="WhyCookiesButton"
                        Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="Why do we make cookies?" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='21' x:Name="VitalAcceleratorButton"
                    Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="What is the Vital Accelerator" 
                                TextWrapping="WrapWholeWords"
                                TextAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Button x:ConnectionId='22' x:Name="FreeWebinars"
                                                     
                                                           
                                                  
                        Content="Free Webinars"
                        Style="{StaticResource StylizedButtonStyle}" />
                <Button x:ConnectionId='23' x:Name="HeadsetButton"
                        Style="{StaticResource DefaultButtonStyle}">
                    <Button.Content>
                        <TextBlock Text="What will we do with your headset if you don't want it?" 
                                   TextWrapping="WrapWholeWords"
                                   TextAlignment="Center"/>
                    </Button.Content>
                </Button>
            </GridView>
        </ScrollViewer>
    </Grid>
</Page>

