<Page
    x:Class="NewHorizonApp.Views.Courseware"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewHorizonApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <!--<EntranceThemeTransition />-->
            <!--<EdgeUIThemeTransition Edge="Left" />-->
            <PaneThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <Style x:Key="CoursewareImportantButton"
               TargetType="Button"
               BasedOn="{StaticResource ImportantStylizedButtonStyle}">
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="360" />
        </Style>
        <Style x:Key="CoursewareStandardButton"
               TargetType="Button"
               BasedOn="{StaticResource StandardStylizedButtonStyle}">
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="360" />
        </Style>
    </Page.Resources>

    <Grid Background="DarkGray"
          Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource HeaderTextBlockStyle}"
                   Text="Please follow the instructions below that pertain to your specific course."
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,36"/>
        <StackPanel x:ConnectionId='1' x:Name="MicrosoftTechnicalCourseware"
                    Orientation="Vertical"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="Microsoft Technical Courseware (MOC)"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="1) Create an account with SkillPipe"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="2) Activate your 16-digit alpha license code"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Courseware can be accessed anywhere"
                       Foreground="White"
                       Margin="24,0,0,0"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Courseware is valid for life"
                       Foreground="White"
                       Margin="24,0,0,0"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Updates will be automatically applied"
                       Foreground="White"
                       Margin="24,0,0,16"/>
            <Button x:ConnectionId='10' x:Name="skillpipeButton"
                    HorizontalAlignment="Center"
                    Style="{StaticResource CoursewareImportantButton}"
                                              >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="skillpipe.com"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <StackPanel x:ConnectionId='2' x:Name="ApplicationCourses"
                    Orientation="Vertical"
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="Application Classes"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="1) Create an account with NH Choice"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="2) Activate your 10-digit alphanumeric license code"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Courseware can be accessed anywhere"
                       Foreground="White"
                       Margin="24,0,0,0"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Courseware is valid for life"
                       Foreground="White"
                       Margin="24,0,0,0"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="*Updates will be automatically applied"
                       Foreground="White"
                       Margin="24,0,0,16"/>
            <Button x:ConnectionId='9' x:Name="nhChoiceButton"
                    HorizontalAlignment="Center"
                    Style="{StaticResource CoursewareImportantButton}"
                                              >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="nh-choice.com"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <StackPanel x:ConnectionId='3' x:Name="vmWare"
                    Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="VMWare"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="1) Create an account with VitalSource Bookshelf"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="2) Click 'Redeem' in the upper right-hand toolbar"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="3) Enter the code provided in your Courseware Notes"
                       Foreground="White"
                       Margin="0,0,0,16"/>
            <Button x:ConnectionId='8' x:Name="vitalsourceButton"
                    HorizontalAlignment="Center"
                    Style="{StaticResource CoursewareImportantButton}"
                                              >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="vitalsource.com"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <StackPanel x:ConnectionId='4' x:Name="cisco"
                    Orientation="Vertical"
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                       Text="Cisco"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="1) Register for a Cisco.com ID"
                       Foreground="White"/>
            <Button x:ConnectionId='6' x:Name="ciscoToolsButton"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,16"
                    Style="{StaticResource CoursewareImportantButton}"
                                              >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="tools.cisco.com"/>
                </Button.Content>
            </Button>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="2) Log into Cisco Learning Network using your Cisco.com ID"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="3) Click on the 'My Content' tab"
                       Foreground="White"/>
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="4) Enter the code provided in your Courseware Notes"
                       Foreground="White"
                       Margin="0,0,0,16"/>
            <Button x:ConnectionId='7' x:Name="ciscoLearningButton"
                    HorizontalAlignment="Center"
                    Style="{StaticResource CoursewareImportantButton}"
                                              >
                <Button.Content>
                    <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="learningspace.cisco.com"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <Button x:ConnectionId='5' Style="{StaticResource CoursewareStandardButton}"
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                                 >
            <Button.Content>
                <TextBlock  Style="{StaticResource ButtonTextBlockStyle}"
                            Text="Return to Home Page"/>
            </Button.Content>
        </Button>
    </Grid>
</Page>

